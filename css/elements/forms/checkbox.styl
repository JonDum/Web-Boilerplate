
input[type="checkbox"]
    display none

    & ~ label
        position relative

    & ~ label:before
        content ''
        display inline-block
        width 12px
        height 12px
        background #fff
        border 1px solid rgba(0, 0, 0, 0.33)
        vertical-align middle
        position relative
        text-indent 14px
        margin-right 5px

    &:checked
        ~ label
            &:after
                display block
                content ''
                width 6px
                height 6px
                position absolute
                left 4px
                top 4px
                background #333

