
input[type="checkbox"], input[type="radio"]
    display none

    & + label
        position relative

    & + label:before
        content ''
        display inline-block
        width 14px
        height 14px
        background #fff
        border 1px solid rgba(0, 0, 0, 0.33)
        vertical-align text-top
        position relative
        text-indent 14px
        margin-right 5px

    &:checked
        + label
            &:after
                display block
                content ''
                width 6px
                height 6px
                position absolute
                left 4px
                top 7px
                background #333

input[type="radio"]
    & + label, & + label:before, & + label:after
        border-radius 99px
