


.loading:after
    overflow hidden
    display inline-block
    vertical-align bottom
    animation loading 1s infinite
    content ""
    background $scrumBlue
    height 1px

@keyframes loading
    0%
        width 0
    100%
        width 3em


@keyframes blink
    from
        opacity 0
    to
        opacity 1

.blink
  animation-name blink
  animation-iteration-count 2
  animation-timing-function linear
  animation-duration 0.35s


.pulse
    animation pulse 0.4s ease


@keyframes pulse
    0%
        transform scale(1)
    30%
        transform scale(1.1)
    100%
        transform scale(1)


// collapse

.collapsable
    transition max-height 0.4s ease
    overflow hidden
    &.collapsed
        max-height 0 !important

