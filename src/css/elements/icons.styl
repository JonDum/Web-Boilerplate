

// Go make some pretty icon fonts from http://icomoon.com/app/
// Move the fonts/ folder from the download into static/ (and the selection.json if you want a backup)
// Copy the .icon.xxx. styles in style.css to the bottom of this file
// Preferences: Font Name=>"icons" Class Prefix=>"icon." CSS Selector=>"Use a Class"=>".icon"

// Usage: <i class='cog icon'></i>



@css {

    @font-face {
        font-family: 'icon';
        src:url('/fonts/icons.eot?91fte4');
        src:url('/fonts/icons.woff?91fte4') format('woff'),
            url('/fonts/icons.ttf?91fte4') format('truetype'),
            url('/fonts/icons.svg?91fte4#icomoon') format('svg');
        font-weight: normal;
        font-style: normal;
    }

}

// customizations

.icon 
    display inline-block
    font-family 'icons'
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    vertical-align middle
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale


