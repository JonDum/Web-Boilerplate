// ----------------------
// Divided
// -----------------------

.divided.grid,
.divided.grid > .row {
  display: table;
  width: 100%;
  margin-left: 0% !important;
  margin-right: 0% !important;
}

.divided.grid > .column:not(.row),
.divided.grid > .row > .column {
  display: table-cell;
  -webkit-box-shadow: -1px 0px 0px 0px rgba(0, 0, 0, 0.1), -2px 0px 0px 0px rgba(255, 255, 255, 0.8);
  box-shadow: -1px 0px 0px 0px rgba(0, 0, 0, 0.1), -2px 0px 0px 0px rgba(255, 255, 255, 0.8);
}

.divided.grid > .column.row {
  display: table;
}

.divided.grid > .column:first-child,
.divided.grid > .row > .column:first-child {
  -webkit-box-shadow: none;
  box-shadow: none;
}

/* Vertically Divided */

