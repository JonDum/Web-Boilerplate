.grid {
  display: block;
  text-align: left;
  font-size: 0em;
  padding: 0%;
  margin: 0 -1.5%;
}

// .grid.relaxed
// {
//     margin: 0 -5%;
// }

body > .grid {
  margin-left: 0%;
  margin-right: 0%;
}

.grid:after,
.row:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

// -------------------
// Columns
// -------------------

.grid > .column,
.grid > .row > .column {
  display: inline-block;
  text-align: left;
  font-size: 1rem;
  padding-left: 1.5%;
  padding-right: 1.5%;
  vertical-align: top;
}

.grid > .vertically.relaxed.row
{
    margin: 6% 0;
    padding: 6% 0;
}

// -------------------
// Rows
// -------------------

.grid > .row {
  display: block;
  width: 100% !important;
  margin-top: 1.5%;
  padding: 1.5% 0% 0%;
  font-size: 0rem;
}

// .grid.relaxed > .row {
//   margin-top: 5%;
//   padding: 5% 0% 0%;
// }

.grid > .row:first-child {
  padding-top: 0 !important;
  margin-top: 0 !important;
}

// -------------------
// Content
// -------------------

// .grid > .row > img,
// .grid > .row > .column > img {
//   max-width: 100%;
// }

.grid .column > .segment:only-child {
  margin: 0em;
}

