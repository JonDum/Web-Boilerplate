

html, body
    line-height 1.618
    font-size 10px // base site font-size is 10px = 1em
    @media $mobile
        font-size 8px

h1
    font-size 4.5em
    @media $mobile
        font-size 4em

h2
    font-size 3em
    @media $mobile
        font-size 3em

h3
    font-size 2.4em

h4
    font-size 1.8em

h5
    font-size 1.4em

h6
    font-size 1.2em


h1, h2, h3, h4, h5, h6
    @extend $headerFont
    color $headlineColor
    line-height 1.3
    margin 0

p, li, dt, dd
    @extend $bodyFont
    color $textColor
    font-size $baseFontSize
    margin 0 0 0 0
    strong
        font-weight 600

ol li
    list-style decimal

ul.list li
    list-style square

ol, ul.list
    li
        margin-left 2em
        padding-left 0.5em
        margin-right 2.5em

dd, li //nesting lists? okay
    ul, ol, dl
        margin-top 0.8em
    li, dd
        font-size 1em

em
    font-style italic

a
    text-decoration none
    color $linkColor
    transition 0.4s color ease
    cursor pointer
    &:hover, &:focus
        color $linkColorHover

.white
    color #fff

small
    font-size 75%
    color lighten($textColor,10)
    h1 &,
    h2 &,
    h3 &,
    h4 &,
    h5 &,
    h6 &
        color lighten($headlineColor,50%)

code, pre
    font-family monospace
pre
    font-size $baseFontSize
